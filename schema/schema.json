{
  "definitions": {
    "CommonType": {
      "description": "Common properties which can be used at any type",
      "type": "object",
      "properties": {
        "description": {
          "description": "General description of this type, should not contain any new lines.",
          "type": "string"
        },
        "type": {
          "description": "Type of the property",
          "type": "string",
          "enum": [
            "object",
            "array",
            "boolean",
            "integer",
            "number",
            "string"
          ]
        },
        "nullable": {
          "description": "Indicates whether it is possible to use a null value",
          "type": "boolean",
          "default": false
        },
        "deprecated": {
          "description": "Indicates whether this type is deprecated",
          "type": "boolean",
          "default": false
        },
        "readonly": {
          "description": "Indicates whether this type is readonly",
          "type": "boolean",
          "default": false
        }
      }
    },

    "ScalarType": {
      "$extends": "CommonType",
      "description": "Properties for a scalar type",
      "type": "object",
      "properties": {
        "format": {
          "description": "Describes the specific format of this type i.e. date-time or int64",
          "type": "string"
        },
        "enum": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "number"
              }
            ]
          }
        },
        "default": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "type": "boolean"
            }
          ]
        }
      }
    },

    "Properties": {
      "description": "Properties of a struct",
      "type": "object",
      "additionalProperties": {
        "oneOf": [
          {
            "$ref": "BooleanType"
          },
          {
            "$ref": "NumberType"
          },
          {
            "$ref": "StringType"
          },
          {
            "$ref": "ArrayType"
          },
          {
            "$ref": "UnionType"
          },
          {
            "$ref": "IntersectionType"
          },
          {
            "$ref": "ReferenceType"
          },
          {
            "$ref": "GenericType"
          }
        ]
      }
    },
    "StructType": {
      "$extends": "CommonType",
      "description": "A struct contains a fix set of defined properties",
      "type": "object",
      "properties": {
        "$final": {
          "description": "Indicates that a struct is final, this means it is not possible to extend this struct",
          "type": "boolean"
        },
        "$extends": {
          "description": "Extends an existing type",
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "object"
          ]
        },
        "properties": {
          "$ref": "Properties"
        },
        "required": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "type",
        "properties"
      ]
    },
    "MapType": {
      "$extends": "CommonType",
      "description": "A map contains variable key value entries of a specific type",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "object"
          ]
        },
        "additionalProperties": {
          "oneOf": [
            {
              "$ref": "BooleanType"
            },
            {
              "$ref": "NumberType"
            },
            {
              "$ref": "StringType"
            },
            {
              "$ref": "ArrayType"
            },
            {
              "$ref": "UnionType"
            },
            {
              "$ref": "IntersectionType"
            },
            {
              "$ref": "ReferenceType"
            },
            {
              "$ref": "GenericType"
            }
          ]
        },
        "maxProperties": {
          "description": "Positive integer value",
          "type": "integer"
        },
        "minProperties": {
          "description": "Positive integer value",
          "type": "integer"
        }
      },
      "required": [
        "type",
        "additionalProperties"
      ]
    },

    "ArrayType": {
      "$extends": "CommonType",
      "description": "An array contains an ordered list of a specific type",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "array"
          ]
        },
        "items": {
          "oneOf": [
            {
              "$ref": "BooleanType"
            },
            {
              "$ref": "NumberType"
            },
            {
              "$ref": "StringType"
            },
            {
              "$ref": "ReferenceType"
            },
            {
              "$ref": "GenericType"
            }
          ]
        },
        "maxItems": {
          "description": "Positive integer value",
          "type": "integer"
        },
        "minItems": {
          "description": "Positive integer value",
          "type": "integer"
        }
      },
      "required": [
        "type",
        "items"
      ]
    },

    "BooleanType": {
      "$extends": "ScalarType",
      "description": "Represents a boolean value",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "boolean"
          ]
        }
      },
      "required": [
        "type"
      ]
    },

    "NumberType": {
      "$extends": "ScalarType",
      "description": "Represents a number value (contains also integer)",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "number",
            "integer"
          ]
        },
        "multipleOf": {
          "type": "number",
          "minimum": 0,
          "exclusiveMinimum": true
        },
        "maximum": {
          "type": "number"
        },
        "exclusiveMaximum": {
          "type": "boolean",
          "default": false
        },
        "minimum": {
          "type": "number"
        },
        "exclusiveMinimum": {
          "type": "boolean",
          "default": false
        }
      },
      "required": [
        "type"
      ]
    },

    "StringType": {
      "$extends": "ScalarType",
      "description": "Represents a string value",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "string"
          ]
        },
        "maxLength": {
          "description": "Positive integer value",
          "type": "integer",
          "minimum": 0
        },
        "minLength": {
          "description": "Positive integer value",
          "type": "integer",
          "minimum": 0
        },
        "pattern": {
          "type": "string",
          "format": "regex"
        }
      },
      "required": [
        "type"
      ]
    },

    "IntersectionType": {
      "type": "object",
      "description": "An intersection type combines multiple types",
      "properties": {
        "description": {
          "type": "string"
        },
        "allOf": {
          "description": "Combination values",
          "type": "array",
          "items": {
            "$ref": "ReferenceType"
          }
        }
      },
      "required": [
        "allOf"
      ]
    },

    "DiscriminatorMapping": {
      "description": "An object to hold mappings between payload values and schema names or references",
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "Discriminator": {
      "description": "Adds support for polymorphism. The discriminator is an object name that is used to differentiate between other schemas which may satisfy the payload description",
      "type": "object",
      "properties": {
        "propertyName": {
          "description": "The name of the property in the payload that will hold the discriminator value",
          "type": "string"
        },
        "mapping": {
          "$ref": "DiscriminatorMapping"
        }
      },
      "required": [
        "propertyName"
      ]
    },
    "UnionType": {
      "description": "An union type can contain one of the provided schemas",
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "discriminator": {
          "$ref": "Discriminator"
        },
        "oneOf": {
          "description": "Combination values",
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "NumberType"
              },
              {
                "$ref": "StringType"
              },
              {
                "$ref": "BooleanType"
              },
              {
                "$ref": "ReferenceType"
              }
            ]
          }
        }
      },
      "required": [
        "oneOf"
      ]
    },

    "TemplateProperties": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "ReferenceType": {
      "description": "Represents a reference to another type",
      "type": "object",
      "properties": {
        "$ref": {
          "description": "Reference to a type under the definitions key",
          "type": "string"
        },
        "$template": {
          "description": "Optional concrete type definitions which replace generic template types",
          "$ref": "TemplateProperties"
        }
      },
      "required": [
        "$ref"
      ]
    },
    "GenericType": {
      "description": "Represents a generic type",
      "type": "object",
      "properties": {
        "$generic": {
          "type": "string"
        }
      },
      "required": [
        "$generic"
      ]
    },

    "Definitions": {
      "description": "Type definitions which can be reused",
      "type": "object",
      "additionalProperties": {
        "oneOf": [
          {
            "$ref": "StructType"
          },
          {
            "$ref": "MapType"
          },
          {
            "$ref": "ReferenceType"
          }
        ]
      }
    },

    "Import": {
      "description": "Contains external definitions which are imported. The imported schemas can be used via the namespace",
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },

    "Root": {
      "description": "Reference a root type at the definitions",
      "type": "object",
      "properties": {
        "$import": {
          "$ref": "Import"
        },
        "definitions": {
          "$ref": "Definitions"
        },
        "$ref": {
          "description": "Reference to a root schema under the definitions key",
          "type": "string"
        }
      },
      "required": [
        "definitions"
      ]
    }
  },
  "$ref": "Root"
}
